<header class="
    bg-darkerbggray
    text-gray-50
    flex flex-row
    items-center
    w-full
    justify-between
    px-4
    md:px-14
    lg:px-26
    py-4
    
  ">
  <nav class="flex-1 flex items-center justify-end">
    <a href="/logout" class="flex items-center">
      <img src="<%= user.displayAvatar %>" width="40" height="40" class="rounded-full" alt="User Image" />
      <btn class="btn-two">
        <%= user.username %>#<%= user.discriminator %> <i class="fa fa-sign-out" aria-hidden="true"></i>
      </btn>
    </a>
  </nav>
</header>